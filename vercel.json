{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "app.py",
        "VERCEL_ENV": "production"
    },
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
} 